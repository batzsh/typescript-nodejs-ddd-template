{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es6"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/config/*"],
      "@docs/*": ["docs/*"],
      "@tests/*": ["tests/*"],
      "@application/*": ["src/application/*"],
      "@domains/*": ["src/domains/*"],
      "@infra/*": ["src/infra/*"]
    },
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules/**/*"]
}
